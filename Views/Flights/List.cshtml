@model List<LotCRUD.Models.Entities.Flight>

<h1>Flights</h1>
    <table class="table">
        <thead>
            <tr>
				<th>Id</th>
				<th>NumerLotu</th>
                <th>DataWylotu</th>
                <th>MiejsceWylotu</th>
                <th>MiejscePrzylotu</th>
                <th>typSamolotu</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var flight in Model)
            {
                <tr>
                    <td>@flight.Id</td>
                    <td>@flight.NumerLotu</td>
                    <td>@flight.DataWylotu</td>
                    <td>@flight.MiejsceWylotu</td>
                    <td>@flight.MiejscePrzylotu</td>
                    <td>@flight.TypSamolotu</td>
				    <td>
                        <a class="btn btn-primary" asp-controller="Flights" asp-action="Edit" asp-route-id="@flight.Id">Edit</a>
                        
                    </td>
                </tr>
		       }


	</tbody>

</table>
<a class="btn btn-primary" asp-controller="Flights" asp-action="Add">Add</a>