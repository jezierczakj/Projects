@{
}
@model LotCRUD.Models.Entities.Flight

<h1>Edit Flight</h1>

@if (Model is null)
    {
        <p>No flight was found</p>
    }

else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />

        </div>

        <div class="mt-3">
            <label class="form-label">Numer Lotu</label>
            <input type="text" class="form-control" onkeydown="return /[a-0\ ]/i.test(event.key)" asp-for="NumerLotu" />

        </div>

        <div class="mt-3">
            <label class="form-label">Data Wyotu</label>
            <input type="date" class="form-control" onkeydown="return /[a-z]/i.test(event.key)" asp-for="DataWylotu" />

        </div>

        <div class="mt-3">
            <label class="form-label">Miejsce Wylotu</label>
            <input type="text" class="form-control" onkeydown="return /[a-z]/i.test(event.key)" asp-for="MiejsceWylotu" />

        </div>

        <div class="mt-3">
            <label class="form-label">Miejsce Przylotu</label>
            <input type="text" class="form-control" onkeydown="return /[a-z]/i.test(event.key)" asp-for="MiejscePrzylotu" />

        </div>

        <div class="mt-3">
            <select class="form-select" aria-label="Default select example" asp-for="TypSamolotu">
                <option value="Airbus">Airbus</option>
                <option value="Embraer">Embraer</option>
                <option value="Boeing">Boeing</option>
            </select>
            @Html.ValidationMessageFor(model => model.TypSamolotu)
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
			<button type="reset" class="btn btn-warning">Reset</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Flights">Delete</button>
        </div>

    </form>
}