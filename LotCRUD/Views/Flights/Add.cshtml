@{
}
@using LotCRUD.Models.Entities
@model LotCRUD.Models.AddFlightViewModel


<h1>Add Flight</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Numer Lotu</label>
        <input type="text" class="form-control" onkeydown="return /[a-0\ ]/i.test(event.key)" asp-for="NumerLotu" />
        @Html.ValidationMessageFor(model => model.NumerLotu)
    
    </div>
    
    <div class="mt-3">
        <label class="form-label">Data Wyotu</label>
        <input type="date" class="form-control" onkeydown="return false" asp-for="DataWylotu" />
        @Html.ValidationMessageFor(model => model.DataWylotu)
    
    </div>
    
    <div class="mt-3">
        <label class="form-label">Miejsce Wylotu</label>
        <input type="text" class="form-control" onkeydown="return /[a-z]/i.test(event.key)" asp-for="MiejsceWylotu" />
        @Html.ValidationMessageFor(model => model.MiejsceWylotu)
    
    </div>
    
    <div class="mt-3">
        <label class="form-label">Miejsce Przylotu</label>
        <input type="" class="form-control" onkeydown="return /[a-z]/i.test(event.key)" asp-for="MiejscePrzylotu" />
        @Html.ValidationMessageFor(model => model.MiejscePrzylotu)
    
    </div>

	<div class="mt-3">
		<label class="form-label">Typ Samolotu</label>
        <select class="form-select" aria-label="Default select example" asp-for="TypSamolotu">
        <option value=""></option>
        <option value="Airbus">Airbus</option>
        <option value="Embraer">Embraer</option>
        <option value="Boeing">Boeing</option>
    </select>
        @Html.ValidationMessageFor(model => model.TypSamolotu)
	</div>
    
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
        
</form>